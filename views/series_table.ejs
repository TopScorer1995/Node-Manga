<!-- series page -->

<div class="mt-2" id="series_section">
<div class="w-responsive p-2  text-center ltr card">
<div class="alert text-white card  text-center" style="background: rgb(63, 92, 128);" role="alert">السلاسل</div>
<div class="my-2  text-center d-block">
	
</div>


<div class="table-responsive"><table id="tablePreview" class="table table-striped table-hover  table-bordered">
            <!--Table head-->
            <thead>
              <tr>
                <th>#</th>
                <th>إسم السلسلة</th>
                <th>إسم السلسلة بالعربي</th>
                <th>أسماء أخرى للسلسلة</th>
                <th>تاريخ الإصدار</th>
                <th>المؤلف</th>
                <th>الراسم</th>
                <th>أضيف بواسطة</th>
                <th>تاريخ الإضافة</th>
                <th>التصنيفات</th>
                <th>عدد الفصول</th>

                <th>عدد التفاعلات</th>
                <th>تم التحقق بواسطة</th>
                <th>المصادر</th>
                <th>mal</th>
                <th>التصنيف العمري</th>
                <th>النوع</th>
                <th>حالة السلسلة</th>
                <th>محذوفة</th>
                <th>إجرائات</th>
              </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>
                <%data.forEach(function(series,index){%>

                <tr>
                <th scope="row"><%=series.id%></th>
                <td><%=series.series_name%></td>
                <td><%=series.series_arabic_name%></td>
                <td><%=series.series_others_name%></td>
                <td><%=series.product_date%></td>
                <td><%=series.series_author%></td>
                <td><%=series.series_painter%></td>
                <td><%=series.by_user%></td>
                <td><%=series.add_date%></td>
<td><%series.classifecation.split(",").forEach(function(clas,index){%><span class="badge  light-blue darken-4  f11  badge_pa  mx-1 pointer" onclick="show_class('<%=clas%>')"><%=clas%></span><%})%></td>
                <td><%=series.chapters_count%></td>
                <td><%=series.reactions_count%></td>
                <td><%if(series.checked==1){%><%=series.checked_by_user%><%}else{%>-<%}%></td>
<td><%series.source.forEach(function(cls,index){%><a href="<%=cls.source_link%>" style="margin:0px !important" class="m-0 px-0"><span class="badge  light-blue darken-4 badge_pa  mx-1  f11 pointer"><%=cls.source_name%></span></a><%})%></td>
                <td><%=series.mal%></td>
                <td><%=series.age%></td>
                <td><%=series.type%></td>
                <td><%=series.status_of_manga%></td>
                <td><!-- Material switch -->
<div class="switch">
  <label>
    نعم
    <input type="checkbox" onchange='if($(this).is(":checked")){delete_series(<%=series.id%>)}else{restore_series(<%=series.id%>)}' <%if(series.deleted==1){%>checked<%}%>>
    <span class="lever"></span> لا
  </label>
</div></td>
                <td>
                    <a class="trigger info-color text-white waves-effect" href="/manga/<%=series.id%>" title="عرض"><i class="fas fa-eye"></i></a>
                    <a class="trigger info-color text-white waves-effect" href="/cpanel?type=series&condition=one_series&index=<%=series.id%>" title="تفاصيل"><i class="fas fa-info"></i></i></a>
                    <a class="trigger info-color text-white waves-effect" onclick="get_series_modal(<%=series.id%>)" title="تعديل"><i class="fas fa-cog"></i></a>
                
                
                
                </td>
              </tr>

                <%})%>
              

            </tbody>
            <!--Table body-->
          </table></div>


<div>
<button class="btn btn-primary d-inline btn-rounded btn-sm" onclick="get_series_table(<%=parseInt(current_page)+1%>,<%=condition%>)" title="التالي"><i class="fas fa-angle-double-left"></i></button>
<button class="btn btn-primary d-inline btn-rounded btn-sm"  <%if(parseInt(current_page)-1>0){%>onclick="get_series_table(<%=parseInt(current_page)-1%>,<%=condition%>)"<%}%>  title="السابق"><i class="fas fa-angle-double-right"></i></button>
</div>

	
</div>

</div>

<!-- series page -->
