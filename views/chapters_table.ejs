

<!-- chapters page -->

<div class="mt-2" id="chapters_section">
<div class="w-responsive p-2  text-center ltr card">
<div class="alert text-white card  text-center" style="background: rgb(63, 92, 128);" role="alert">الفصول</div>
<div class="my-2  text-center d-block">
	
</div>


<div class="table-responsive"><table id="tablePreview" class="table table-striped table-hover  table-bordered">
            <!--Table head-->
            <thead>
              <tr>
                <th>#</th>
                <th>السلسلة</th>
                <th>رقم الفصل</th>
                <th>عنوان الفصل</th>
                <th>المجلد</th>
                <th>بواسطة</th>
                <th>تاريخ الإضافة</th>
                <th>+17</th>
                <th>مرات التحميل</th>
                <th>المشاهدات</th>
                <th>محذوف</th>
                
                <th>إجرائات</th>
                
              </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>
                <%data.forEach(function(chapter,index){%>

                <tr>
                <th scope="row"><%=chapter.id%></th>
                <td><%=chapter.series_name%></td>
                <td><%=chapter.chapter_number%></td>
                <td><%=chapter.chapter_label%></td>
                <td><%=chapter.folder%></td>
                <td><%=chapter.team_name%></td>
                <td><%=chapter.add_date%></td>
                <td><%if(chapter.is_plus_17==1){%>نعم<%}else{%>لا<%}%></td>
                <td><%=chapter.download_number%></td>
                <td><%=chapter.seen_number%></td>
                <td><!-- Material switch -->
<div class="switch">
  <label>
    نعم
    <input type="checkbox" class="delete_chapter_switch" onchange='if($(this).is(":checked")){delete_chapter(<%=chapter.id%>)}else{restore_chapter(<%=chapter.id%>)}' <%if(chapter.deleted==1){%>checked<%}%>>
    <span class="lever"></span> لا
  </label>
</div></td>
                <td>
                    <a class="trigger info-color text-white waves-effect" title="عرض" href="/reader/<%=chapter.id%>"><i class="fas fa-eye"></i></a>
                    <a class="trigger info-color text-white waves-effect" title="تعديل" onclick="get_chapter_modal(<%=chapter.id%>)"><i class="fas fa-cog"></i></a>
                
                
                
                </td>
              </tr>


                <%})%>
              
            </tbody>
            <!--Table body-->
          </table></div>


<div>
<button class="btn btn-primary d-inline btn-rounded btn-sm" onclick="get_chapters_table(<%=parseInt(current_page)+1%>,<%=condition%>)" title="التالي"><i class="fas fa-angle-double-left"></i></button>
<button class="btn btn-primary d-inline btn-rounded btn-sm" <%if(parseInt(current_page)-1>0){%>onclick="get_chapters_table(<%=parseInt(current_page)-1%>,<%=condition%>)"<%}%> title="السابق"><i class="fas fa-angle-double-right"></i></button>
</div>
	
</div>
<script type="text/javascript">

</script>
</div>

